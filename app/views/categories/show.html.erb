<% flash.each do |key, message| %>
  <div class="alert <%= flash_class(key) %> alert-dismissible fade show text-center" role="alert">
    <%= message %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
    <div class="text-center">
        <h1>
          <%= @category.name%>
        </h1>
      
        <small class="text-muted"><%= @category.description%></small>
          <%= link_to categories_edit_path(@category.id,user_id:@user_id),class:"border-0 btn-transition btn btn-outline-success" do %>
          <i class="fa fa-edit"></i>
          <%end%>
    </div>
  <h4>Tasks  
  <%= link_to tasks_new_id_path(user_id:@user_id),class:"border-0 btn-transition btn btn-outline-primary" do %>
          <i class="fa fa-plus"></i>
  <%end%></h4>
           <div class="widget-content-right"> <button class="border-0 btn-transition btn btn-outline-success"> <i class="fa fa-check"></i></button> </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>completed</th>
        <th>Description</th>
        <th colspan="3">action</th>
      </tr>
    </thead>

    <tbody>
        
      <% @tasks.each do |task| %>
        <tr>
          <td><%= check_box_tag("name", "value", false, class: "checkbox") %></td>
          <td><%= task.description %></td>
          <td><%= link_to show_task_path(task,category_id:@category,user_id:@user_id),class:"border-0 btn-transition btn btn-outline-primary" do %>
          <i class="fa fa-eye"></i>
          <%end%></td></td>
          <td><%= link_to edit_task_path(task,category_id:@category,user_id:@user_id),class:"border-0 btn-transition btn btn-outline-success" do %>
          <i class="fa fa-edit"></i>
          <%end%></td>
          <td>
          <%= link_to  destroy_task_path(task,category_id:@category,user_id:@user_id), method: :delete, data: { confirm: 'Are you sure?' } ,class:"border-0 btn-transition btn btn-outline-danger" do %>
          <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  

